<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".TerminarViaje"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/bog" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="TERMINAR VIAJE"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:paddingTop="20dp"
            android:id="@+id/txtFecha"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora Salida"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:paddingTop="20dp"
            android:id="@+id/txtHora"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora Llegada"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:paddingTop="20dp"
            android:id="@+id/txtHoraLlegada"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lugar de Salida"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|textAutoComplete"
            android:paddingTop="20dp"
            android:id="@+id/txtLugarSalida"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lugar de Llegada"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|textAutoComplete"
            android:paddingTop="20dp"
            android:id="@+id/txtLugarLlegada"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kilometraje Inicial"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:paddingTop="20dp"
            android:id="@+id/txtKilometraje"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kilometraje Final"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:paddingTop="20dp"
            android:id="@+id/txtKilometrajeFinal"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detalle de Actividad"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        app:hintTextColor="#000000"
        app:boxStrokeColor="#000000">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|textAutoComplete"
            android:paddingTop="20dp"
            android:id="@+id/txtDetalle"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btniniciardetener"
        android:layout_width="320dp"
        android:layout_height="63dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#002160"
        android:onClick="verificarDatosFinal"
        android:text="Terminar Viaje"
        app:icon="@drawable/baseline_car_rental_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="274dp" />

</LinearLayout>