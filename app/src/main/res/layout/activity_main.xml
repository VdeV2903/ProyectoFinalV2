<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="128dp"
        android:text="Hola"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Inicia sesi칩n en tu cuenta"
        android:textColor="#D1CBCB"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtUser"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="249dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints"
        android:autofillHints="" />

    <EditText
        android:id="@+id/txtPassword"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="249dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/baseline_password_24"
        android:ems="10"
        android:hint="Contrase침a"
        android:inputType="text"
        android:password="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUser"
        tools:ignore="MissingConstraints"
        android:autofillHints="" />

    <Switch
        android:id="@+id/swSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:text="Mantener sesi칩n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#15306E"
        android:onClick="login"
        android:text="Iniciar Sesi칩n"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swSesion" />

    <Button
        android:id="@+id/btnRegistar"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:onClick="register"
        android:text="Registrarme"
        android:backgroundTint="#15306E"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>